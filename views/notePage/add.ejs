<div class="container-fluid container-fluid-custom pb-5 mb-5">

  <div class="row mb-4 add_note_head">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/note">Dashboard</a></li>
          <li class="breadcrumb-item" style="text-decoration: underline;">เพิ่มโน็ต</li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">เพิ่มโน็ตของ <%= userName %> เลย</h1>
      </div>
    </div>
  </div>

  <form action="/note/add" method="POST" class="add_form position-relative">
    <div class="form-group mb-4" style="left:1px; top:1px; right: 1px;">
      <input type="text" class="note_title form-control border-0" id="title" name="title"
        placeholder="เพิ่มหัวข้อเลย..." required>
    </div>

    <div class="form-group mb-4">
      <textarea required class="note_content form-control" id="body" name="body" placeholder="บันทึกเลย...."
        rows="12"></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">+ เพิ่มโน็ต</button>
    </div>

  </form>

</div>
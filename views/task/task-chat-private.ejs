      max-height: 410px;
      overflow-y: auto;
    }

    .nameconuser .nameuser {
      font-size: 16px;
      font-weight: 500;
      color: #020817;
    }

    .nameconuser .conuser {
      width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 14px;
      color: #111827b3;
    }

    .timenotimessage .timemessage {
      font-size: 12px;
      color: #6B7280;
    }

    .user-list li.active {
      background-color: #f1f1f1;
    }

    .user-list li.active:hover {
      background-color: #f1f1f1;
    }

    .notimesaage {

                            <input type="hidden" id="selectedMemberId" name="selectedMemberId" />
                        </div>
                
                        <!-- Select Role -->
                        <div class="dropdown roleSelect">
                            <a class="dropdown-toggle" id="roleDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

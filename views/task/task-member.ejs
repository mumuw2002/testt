                                    </div>
                                </td>
                                <td>
                                    <%= collab.user.googleEmail %>
                                </td>
                                <td>
                                    <div class="dropdown changeRole">
                                        <% if (currentUserRole === 'owner') { %>
                                            <a  class="dropdown-toggle" 
                                                id="roleDropdown<%= collab._id %>" role="button"
                                                data-bs-toggle="dropdown" 
                                                aria-expanded="false">
                                                <span   class="roleDisplay <%= collab.role === 'owner' ? 'roleLeader' : collab.role === 'member' ? 'roleMember' : collab.role === 'guest' ? 'roleGuest' : '' %>" 
                                                        id="selectedRoleDisplay<%= collab._id %>">
                                                    <%= collab.role === 'owner' ? 'ผู้ดูแล' : collab.role === 'member' ? 'สมาชิก' : collab.role === 'guest' ? 'แขก' : collab.role %>
